# ============================================================================
# Patreon Scraper - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_NAME=alejandria
DB_USER=patreon_user
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_HOST=localhost
DB_PORT=5432

# SQLAlchemy database URL (auto-constructed from above, or set manually)
# DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Redis URL for Celery (auto-constructed from above, or set manually)
# REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================================================
# PATREON CREDENTIALS
# ============================================================================

PATREON_EMAIL=your_email@example.com
PATREON_PASSWORD=your_password_here

# ============================================================================
# FIREBASE (Legacy - will be migrated to PostgreSQL)
# ============================================================================

FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_DATABASE_SECRET=your_secret_here

# ============================================================================
# AI SERVICES (Optional - for Phase 6)
# ============================================================================

# OpenAI API (for embeddings and Whisper API)
# OPENAI_API_KEY=sk-...

# Google Gemini AI (for tag generation)
# GEMINI_API_KEY=...

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================

FLASK_APP=web/viewer.py
FLASK_ENV=development
FLASK_SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING

# ============================================================================
# SECURITY
# ============================================================================

# For production, generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING
SECURITY_PASSWORD_SALT=CHANGE_THIS_TO_RANDOM_STRING

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================================================
# MISC
# ============================================================================

# Timezone
TZ=Europe/Madrid

# Max workers for Celery
CELERY_WORKERS=4
